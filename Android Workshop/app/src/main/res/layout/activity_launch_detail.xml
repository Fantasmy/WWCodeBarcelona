<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:padding="20dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/launchImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/missionNameLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="@string/launch_year" />

            <TextView
                android:id="@+id/yearOfLaunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12983" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="@string/mission_success" />

            <TextView
                android:id="@+id/successOfLaunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="True" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rocket_info"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="@string/rocket_name" />

            <TextView
                android:id="@+id/rocketNameLaunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="12983" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rocketDetailInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:text="@string/rocket_detail" />

            <TextView
                android:id="@+id/rocketDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="details" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/site_info"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/siteInfoLaunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            tools:text="Place" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>